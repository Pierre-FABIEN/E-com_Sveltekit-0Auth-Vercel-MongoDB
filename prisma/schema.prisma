datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  image     String?
  role      String
  addresses Address[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  @@map("users")
}

model Address {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  street    String
  city      String
  state     String
  zip       String
  country   String
  userId    String? @db.ObjectId
  user      User?   @relation(fields: [userId], references: [id])
  @@map("addresses")
}
